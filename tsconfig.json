{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"], // Maps @ to the src directory
      "@components/*": ["components/*"], // Maps @components to the components directory
      "@context/*": ["context/*"], // Maps @context to the utils directory
      "@utils/*": ["utils/*"], // Maps @utils to the utils directory
      "@hooks/*": ["hooks/*"], // Maps @hooks to the hooks directory
      "@types/*": ["types/*"], // Maps @types to the types directory
      "@firebase/*": ["firebase/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/chat/chat.js",
    "src/app/login/login.js",
    "next.config.js",
    "firebase.js"
  ],
  "exclude": ["node_modules"]
}
